FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions              [0 0 0 1 0 0 0]; // K

internalField           uniform 300;

boundaryField
{
    inlet
    {
        type            codedFixedValue;
        value           uniform 350;
        redirectType    T;
        code
        #{
            #include "../../constant/transportProperties.H" /* get variables */
            #include "../../../../../solvers/utilities/codedFixedValueBC/T.C"
            
            Info << "Calculated BC:  T = "
                 << TStagn*( 1 - (GAMMA - 1)/(GAMMA + 1)*magSqr(U)/criticalSqrVelocity )
                 << endl;
        #};
    }
    
    outlet
    {
        type            zeroGradient;
    }
        
    walls
    {
        type            zeroGradient;
    }
}

