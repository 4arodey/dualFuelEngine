FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "../constant/engineProperties"

endTimeCA       #calc "($EVO + 180)*$deltaTCA";


application     rhoPimpleFoam; // dyMFoam \ rhoPimpleFoam

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         $endTimeCA;

deltaT          $deltaTCA;

writeControl    adjustableRunTime;

writeInterval   $deltaT;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression false;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  true;

maxCo           0.5;

functions
{
    #includeFunc flowRatePatch(name=inlet)
    #includeFunc flowRatePatch(name=injection)
    #includeFunc flowRatePatch(name=outlet)

    #includeFunc MachNo
    #includeFunc CourantNo
    #includeFunc writeObjects(e, K)
    #includeFunc writeCellVolumes

    volAverageFieldValues
    {
        type            volFieldValue;
        libs            ("libfieldFunctionObjects.so");
        writeControl    timeStep;
        writeInterval   1;
        log             true;
        writeFields     false;
        writeVolume     true; /*FIXME #0003489: https://bugs.openfoam.org/view.php?id=3489 */
        regionType      cellZone;
        name            cylinder;
        operation       volAverage;
        fields
        (
            p T rho e K
        );
    }

    totalEnergy
    {
        type            add;
        libs            ("libfieldFunctionObjects.so");

        fields          (e K);

        executeControl  writeTime;
        writeControl    writeTime;
    }
}


