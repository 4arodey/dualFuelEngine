FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     rhoPimpleFoam; // dyMFoam \ rhoPimpleFoam

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.48;

deltaT          0.0009;

writeControl    adjustableRunTime;

writeInterval   0.0018;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression false;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  true;

maxCo           0.5;

functions
{
    #includeFunc MachNo
    #includeFunc CourantNo
    #includeFunc writeObjects(e, K)
    // #includeFunc writeCellVolumes

    cylinderVolAverageFieldValues
    {
        type            volFieldValue;
        libs            ("libfieldFunctionObjects.so");
        writeControl    timeStep;
        writeInterval   1;
        log             true;
        writeFields     false;
        writeVolume     true; //FIXME #0003489: https://bugs.openfoam.org/view.php?id=3489
        regionType      cellZone;
        name            cylinder;
        operation       volAverage;
        fields
        (
            p T rho e K
        );
    }
}


