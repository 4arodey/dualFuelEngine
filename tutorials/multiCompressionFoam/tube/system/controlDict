FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     multiCompressionFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.0015;

deltaT          2e-05;

writeControl    adjustableRunTime;

writeInterval   $deltaT;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression false;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  true;

maxCo           0.1;

functions
{
    #includeFunc flowRatePatch(name=inlet)

    volFieldValue // https://github.com/OpenFOAM/OpenFOAM-dev/blob/master/src/functionObjects/field/fieldValues/volFieldValue/volFieldValue.H
    {
        type            volFieldValue;
        libs            ("libfieldFunctionObjects.so");

        writeControl    timeStep;
        writeInterval   1;

        writeFields     false;
        log             true;

        operation       volAverage;
        fields
        (
            p T e rho alphaAir alphaGas alphaExh
        );
    }
}


