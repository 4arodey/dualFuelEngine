FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

/*
n = 92, RPM
EVO = 85, deg CA
deltaDeg = 1/6/n = 0.0018116, s
*/

application     multiCompressionFoam; // dyMFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.48; // (EVO + 180)/6/n

deltaT          1.81e-05; // 0.01 [deg CA]

writeControl    adjustableRunTime;

writeInterval   1.81e-04; // 1.81e-04 (0.1 [deg CA]) | 4.53e-04 (0.25 [deg CA])

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression false;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  true;

maxCo           0.25;

functions
{
    volFieldValue // https://github.com/OpenFOAM/OpenFOAM-dev/blob/master/src/functionObjects/field/fieldValues/volFieldValue/volFieldValue.H
    {
        type            volFieldValue;
        libs            ("libfieldFunctionObjects.so");

        writeControl    timeStep;
        writeInterval   1;

        writeFields     false;
        log             true;

        operation       volAverage;
        fields
        (
            p T e rho alphaAir alphaGas alphaExh
        );
    }
}

// ************************************************************************* //
