FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 0.01;

/*
           7-------------------------------6
          /|                              /|
         4-------------------------------5 |
inlet => | |                             | | => outlet
         | 3-- -- -- -- -- -- -- -- -- --|-2
         |/                              |/
         0-------------------------------1
*/

vertices
(
    /*00*/ (-30 -0.5 -0.5)
    /*01*/ ( 30 -0.5 -0.5)
    /*02*/ ( 30  0.5 -0.5)
    /*03*/ (-30  0.5 -0.5)
    /*04*/ (-30 -0.5  0.5)
    /*05*/ ( 30 -0.5  0.5)
    /*06*/ ( 30  0.5  0.5)
    /*07*/ (-30  0.5  0.5)
);

blocks
( 
    hex (0 1 2 3 4 5 6 7) (60 1 1) simpleGrading (0.75 1 1)
);

edges();

boundary
(
    walls
    {
        type             patch;
        faces
        (
            (0 1 5 4)
            (2 3 7 6)
            (0 1 2 3)
            (4 5 6 7)
        );
    }

    inlet
    {
        type            patch;
        faces           ((3 0 4 7));
    }

    outlet
    {
        type            patch;
        faces           ((1 2 6 5));
    }
);

