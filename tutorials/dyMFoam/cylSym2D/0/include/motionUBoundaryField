boundaryField
{
    piston
    {
        type            uniformFixedValue;
        uniformValue 
        { 
            type        sine; 
            frequency   1;
            amplitude   10; // max piston speed
            level       0;  // offset
        }
    }
    "inlet|injection|outlet|(inlet|injection)_topAndBottom|cyl_top|defaultFaces" // "(injection|inlet|outlet).*|cyl_top|defaultFaces" /* walls */
    {   /* Fixed patches */
        type            uniformFixedValue;
        uniformValue    constant 0;
    }
    "(cyl|inlet|injection)_(front|back)" /* wedge */ // "cyl_(front|back)" /* walls */
    {   /* Moving patches */
        type            wedge; // slip;
    }
    /* Fixed ACMIs */
    ACMI1_couple
    {
        type            uniformFixedValue;
        patchType       cyclicACMI;
        uniformValue    0;
    }
    ACMI1_blockage
    {
        type            uniformFixedValue;
        uniformValue    0;
    }
    /* Moving ACMIs */
    ACMI2_couple
    {
        type            slip;
        patchType       cyclicACMI;
        value           uniform 0;
    }
    ACMI2_blockage
    {
        type            slip;
        value           uniform 0;
    }
}
