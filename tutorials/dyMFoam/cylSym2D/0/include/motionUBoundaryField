boundaryField
{
    piston
    {
        type            uniformFixedValue;
        uniformValue 
        { 
            type        sine; 
            frequency   1;
            amplitude   10; // max piston speed
            level       0;  // offset
        }
    }

    // Patches //
    "(inlet|inlet_topAndBottom|injection|injection_topAndBottom|outlet|cylTop|defaultFaces)"
    {
        type            uniformFixedValue;
        uniformValue    constant 0;
    }
    axis
    {
        type            slip;
    }
    "(inlet_front|inlet_back|injection_front|injection_back|cylFront|cylBack)"
    {
        type            wedge;
    }

    // Fixed ACMIs //
    ACMI1_couple
    {
        type            uniformFixedValue;
        patchType       cyclicACMI;
        uniformValue    0;
    }
    ACMI1_blockage
    {
        type            uniformFixedValue;
        uniformValue    0;
    }

    // Moving ACMIs //
    ACMI2_couple
    {
        type            slip;
        patchType       cyclicACMI;
        value           uniform 0;
    }
    ACMI2_blockage
    {
        type            slip;
        value           uniform 0;
    }
}
