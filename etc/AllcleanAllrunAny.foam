#!/bin/sh
cd ${0%/*} || exit 1    # Run from this directory

# Clean
# ~~~~~
if [ -f 'Allclean' ]; then
    ./Allclean
else
    # Source tutorial clean functions
    . $WM_PROJECT_DIR/bin/tools/CleanFunctions

    cleanCase
fi

# Run
# ~~~
# Source tutorial run functions
. $WM_PROJECT_DIR/bin/tools/RunFunctions

if [ -f 'Allrun' ]; then
    ./Allrun || cat log.$(getApplication)
else
    (runApplication blockMesh && runApplication $(getApplication))\
    || cat log.$(getApplication)
fi